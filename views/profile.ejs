<!doctype html>
<html>
<head>
    <title>BMI CALCULATOR</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>BMI log</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span class="total"><%= messages[i].weight %></span>
              <span><%= messages[i].height %></span>
              <span><%= messages[i].bmi %></span>

              <!-- <span><%= messages[i].thumbUp %></span> -->
              <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="trash" aria-hidden="true">üóëÔ∏è</i></span>
            </li>
          <% } %>
          </ul>

          <h2>Calculate your BMI</h2>
        <% if (user.local.email) { %>
          <form action="/bob" method="POST">
            Name: <input type="text" placeholder="Name" name="name"><br>
            Your Weight (pounds): <input id="weight" type="text" name="weight"><br>
            Your Height (inches): <input id="height" type="text" name="height" ><br>
            <button id="calculateBmi" type="button" name="button">Calculate Bmi</button>
            <!-- <input id="calculateBMI" type="button" value="Calculate BMI" onClick="calculateBmi()"><br> -->

            <input class="button1" type="submit" value="Submit">
          </form>
        </div>
        <% } %>


</div>


<script src="main.js"></script>

</body>
</html>
